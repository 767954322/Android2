<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_list_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76.5dp"
        android:background="@color/color_main_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_teacher_info_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:textColor="#FF333333"
                android:textSize="14dp"
                tools:text="888912" />

            <TextView
                android:id="@+id/tv_teacher_info_vipuid"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_alignTop="@+id/tv_teacher_info_uid"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_teacher_info_uid"
                android:background="@drawable/shape_liang_code"
                android:gravity="center"
                android:text="靓"
                android:textColor="#FFF"
                android:textSize="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_teacher_info_uid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="UID"
                android:textColor="#FF999999"
                android:textSize="12dp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="#D2D2D2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_teacher_info_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:textColor="#FF333333"
                android:textSize="14dp"
                tools:text="22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_teacher_info_attention"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="关注"
                android:textColor="#FF999999"
                android:textSize="12dp" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="#D2D2D2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_teacher_info_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:textColor="#FF333333"
                android:textSize="14dp"
                tools:text="123" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_teacher_info_fans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="粉丝"
                android:textColor="#FF999999"
                android:textSize="12dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_main_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:src="@drawable/ic_teacher_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TA的微信号"
            android:textColor="#FF333333"
            android:textSize="16dp"
            android:visibility="gone"  />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_teacher_info_wechat"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/app_margin"
            android:background="@drawable/shape_hot_sile"
            android:gravity="center"
            android:text="查看"
            android:textColor="#FFAA6308"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_main_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/app_margin">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="财富等级"
                android:textColor="#FF333333"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/iv_teacher_info_devoteLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv1"
                android:background="@drawable/ic_money"
                android:paddingLeft="28dp"
                android:paddingTop="5dp" />

            <ProgressBar
                android:id="@+id/progressBar_devoteLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/iv_teacher_info_next_devoteLevel"
                android:layout_toRightOf="@+id/iv_teacher_info_devoteLevel"
                android:max="100"
                android:progress="200"
                android:progressDrawable="@drawable/layer_progressbar_devote"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_teacher_devoteLevel"
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:layout_below ="@id/progressBar_devoteLevel"
                android:layout_toLeftOf="@+id/iv_teacher_info_next_devoteLevel"
                android:layout_toRightOf="@+id/iv_teacher_info_devoteLevel"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="还差0贡献值"
                android:textSize="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="#999999"
                />

            <ImageView
                android:id="@+id/iv_teacher_info_next_devoteLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/ic_money"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingTop="5dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_teacher_dash"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_margin">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="魅力等级"
                android:textColor="#FF333333"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_teacher_info_charmLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv2"
                android:background="@drawable/ic_teacher_charm_level"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingTop="5dp"
                android:textColor="#FF6E6E6E"
                android:textSize="9dp"
                tools:text="2" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/tv_teacher_info_next_charmLevel"
                android:layout_toRightOf="@+id/tv_teacher_info_charmLevel"
                android:max="100"
                android:progress="200"
                android:progressDrawable="@drawable/layer_progressbar_charm"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_teacher_charmLevel"
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:layout_below ="@id/progressBar"
                android:layout_toLeftOf="@+id/tv_teacher_info_next_charmLevel"
                android:layout_toRightOf="@+id/tv_teacher_info_charmLevel"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="还差0贡献值"
                android:textSize="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/tv_teacher_info_next_charmLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/ic_teacher_charm_level"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingTop="5dp"
                android:textColor="#FF6E6E6E"
                android:textSize="9dp"
                tools:text="2" />
        </RelativeLayout>

    </LinearLayout>

    <com.tuwan.yuewan.ui.widget.GiftReceivedTopThree
        android:id="@+id/giftlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />


    <com.tuwan.yuewan.ui.widget.TeacherInfoView
        android:id="@+id/teacher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="13dp" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/marginbtm" />

</LinearLayout>

