<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/popup_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:src="@drawable/popup_close2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lin"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/pop_back"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/popup_icon"
                    android:textSize="@dimen/dimen_15"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="导师评价"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/popup_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30px"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/teacherappraise_star_grey2x" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/teacherappraise_star_grey2x" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/teacherappraise_star_grey2x" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/teacherappraise_star_grey2x" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20px"
                        android:src="@drawable/teacherappraise_star_grey2x" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/l"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:background="@drawable/appraise"
                    android:gravity="top"
                    android:hint="对导师的印象如何，请描述一下"
                    android:maxHeight="120dp"
                    android:textSize="@dimen/dimen_10"
                    android:padding="10dp" />


                <LinearLayout
                    android:layout_below="@+id/edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/layout1"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:id="@+id/image_pingjia"
                        android:background="@drawable/icon_name"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:text="匿名评价"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/pop_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-35dp"
                android:background="@drawable/pop_btn"
                android:text="确认" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>