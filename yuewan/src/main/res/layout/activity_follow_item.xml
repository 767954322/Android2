<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_follow_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
        android:textColor="#999999"
        android:paddingLeft="15dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:text="A"
        android:textSize="@dimen/dimen_10"
        />
    <LinearLayout
        android:id="@+id/lly_follow_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_follow_icon"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginLeft="@dimen/dimen_15.5"
            android:scaleType="fitXY"
            android:src="@drawable/empty_pic"
            app:riv_oval="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginLeft="@dimen/dimen_10"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_follow_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="小可爱"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_follow_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="汕头"
                    android:textSize="@dimen/dimen_9"
                    android:textColor="#C2C2C2"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" | "
                    android:textSize="@dimen/dimen_9"
                    android:textColor="#C2C2C2"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_follow_online"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="离线"
                    android:textSize="@dimen/dimen_9"
                    android:textColor="#C2C2C2"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/lly_follow_sex"
                    android:layout_width="@dimen/dimen_28"
                    android:layout_height="@dimen/dimen_15"
                    android:background="@drawable/register_data_bg_girl"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/img_follow_sex"
                        android:layout_width="@dimen/dimen_9.5"
                        android:layout_height="@dimen/dimen_9.5"
                        android:src="@drawable/women_icon"
                        />
                    <TextView
                        android:id="@+id/tv_follow_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="@dimen/dimen_9"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lly_follow_vip"
                    android:layout_width="@dimen/dimen_32"
                    android:layout_height="@dimen/dimen_15"
                    android:layout_marginLeft="@dimen/dimen_5"
                    >

                    <ImageView
                        android:id="@+id/img_follow_vip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lly_follow_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_15"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:orientation="horizontal"
                    >


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/tv_follow_end"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="#F4F4F4"
        android:layout_marginLeft="@dimen/dimen_15.5"
        />
</LinearLayout>
