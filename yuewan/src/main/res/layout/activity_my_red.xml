<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4">
    <RelativeLayout
        android:id="@+id/addinfo_toobar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <include layout="@layout/include_back_btn" />

        <TextView
            android:id="@+id/tv_im_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的红包"
            android:textColor="#000"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lly_my_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_20"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/dimen_110"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_no_coupon"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用红包"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_30"/>
        <LinearLayout
            android:id="@+id/lly_my_red_historys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看我的"
                android:textSize="@dimen/dimen_12"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_my_red_mores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红包历史"
                android:textSize="@dimen/dimen_12"
                android:textColor="#4A90E2"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lly_select_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="不使用优惠券"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="#666666"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/img_red_check_no"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/pay_normal3x"
                    android:layout_marginRight="@dimen/dimen_15"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/lv_my_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_15"
                android:background="#f4f4f4"
                />
            <LinearLayout
                android:id="@+id/lly_my_red_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看我的"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="#999999"/>
                <TextView
                    android:id="@+id/tv_my_red_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包历史"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="#4A90E2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
