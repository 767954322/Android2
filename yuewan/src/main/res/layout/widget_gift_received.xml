<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_teacher_info_gift_left"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:text="收到的礼物"
        android:textColor="#FF333333"

        android:textSize="16dp" />


    <ImageView
        android:id="@+id/iv_devoterank_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_widget_gift_number3"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/iv_arrow_right"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_widget_gift_number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_devoterank_3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/iv_devoterank_3"
        android:layout_marginBottom="6.5dp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="#FF999999"
        android:textSize="10dp"
        tools:text="121" />


    <ImageView
        android:id="@+id/iv_devoterank_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_widget_gift_number3"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/iv_devoterank_3"
        android:visibility="gone"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_widget_gift_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_widget_gift_number3"
        android:layout_alignLeft="@+id/iv_devoterank_2"
        android:layout_alignRight="@+id/iv_devoterank_2"
        android:gravity="center"
        android:textColor="#FF999999"
        android:textSize="10dp"
        android:visibility="gone"
        tools:text="222" />


    <ImageView
        android:id="@+id/iv_devoterank_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_widget_gift_number3"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/iv_devoterank_2"
        android:visibility="gone"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_widget_gift_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_widget_gift_number3"
        android:layout_alignLeft="@+id/iv_devoterank_1"
        android:layout_alignRight="@+id/iv_devoterank_1"
        android:gravity="center"
        android:textColor="#FF999999"
        android:textSize="10dp"
        android:visibility="gone"
        tools:text="11111" />


    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_min_margin"
        android:src="@drawable/arrow_right" />


</merge>