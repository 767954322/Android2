<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    tools:context="com.tuwan.yuewan.ui.activity.teacher.OneOnlineActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <include layout="@layout/include_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一键上下线"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F4F4F4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/one_icon"
                android:layout_width="189px"
                android:layout_height="226px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/linears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/one_icon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/downline_icon2x" />

                <TextView
                    android:id="@+id/one_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/one_icon"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/one_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="在线时长"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/one_refesh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btns"
                android:text="刷新时间"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/main_bg_color" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#F4F4F4" />

        <LinearLayout
            android:id="@+id/one_linearss"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/main_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/time_icon2x"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="服务时间" />

            <TextView
                android:id="@+id/one_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="" />

            <ImageView
                android:id="@+id/iamge_data"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/oneline_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:text="" />
</LinearLayout>
