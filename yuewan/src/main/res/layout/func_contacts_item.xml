<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_list_bg">

    <RelativeLayout
        android:id="@+id/rl_func_fans"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/touch_bg">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_margin"
            android:contentDescription="@string/empty"
            android:scaleType="fitStart"
            android:src="@drawable/ic_func_fans" />

        <TextView
            android:id="@+id/tv_func_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11.5dp"
            android:layout_toRightOf="@+id/img_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="粉丝"
            android:textColor="#FF333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tab_new_msg_label"
            android:layout_width="@dimen/redpoint_circle_mm"
            android:layout_height="@dimen/redpoint_circle_mm"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tv_func_name"
            android:background="@drawable/nim_g_unread_badge"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/redpoint_textsize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_fans_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_margin"
            android:drawablePadding="14dp"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="#999"
            android:textSize="13dp"
            tools:text="0" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_func_search"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_session_item_normal"
        android:drawableLeft="@drawable/ic_small_search"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="搜索昵称"
        android:textColor="#FF999999"
        android:textSize="12dp"
        android:visibility="visible" />

</FrameLayout>