<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_tryst_icon"
        android:layout_width="@dimen/dimen_75"
        android:layout_height="@dimen/dimen_75"
        android:layout_marginLeft="@dimen/dimen_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginLeft="@dimen/dimen_15">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_tryst_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dimen_14"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_tryst_grading"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_14"
                android:gravity="center"
                android:text="钻石"
                android:textSize="@dimen/dimen_10"
                android:textColor="@color/white"
                android:background="@drawable/grid_texts"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tryst_item_name"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_tryst_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FF4949"
                android:gravity="center_vertical"
                android:textSize="@dimen/dimen_12"/>
            <TextView
                android:id="@+id/tv_tryst_ordernum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:textSize="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_20"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
