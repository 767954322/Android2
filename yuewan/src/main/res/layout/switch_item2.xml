<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_110"
    android:background="@color/main_bg_color"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/lis"
    android:paddingRight="@dimen/dimen_15"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:src="@drawable/popup_icon"
        android:layout_marginLeft="@dimen/dimen_15.5"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_110"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/name_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/dimen_14"
                android:textColor="#2A2A2A"/>

            <TextView
                android:id="@+id/switch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汕头 |离线"
                android:textSize="@dimen/dimen_9"
                android:textColor="#C2C2C2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/switch_sexs"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_15"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sex_woman"
                android:gravity="center">

                <ImageView
                    android:id="@+id/switch_sexicon"
                    android:layout_width="@dimen/dimen_9.5"
                    android:layout_height="@dimen/dimen_9.5"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/sign_mal2x" />

                <TextView
                    android:id="@+id/switch_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="22"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimen_9" />
            </LinearLayout>

            <GridView
                android:id="@+id/switch_icon"
                android:layout_width="@dimen/dimen_117"
                android:layout_height="@dimen/dimen_15"
                android:numColumns="7"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_gravity="center_vertical"
                android:horizontalSpacing="@dimen/dimen_2"
                android:stretchMode="columnWidth"
                android:overScrollMode="never"
                android:scrollbars="none"></GridView>
        </LinearLayout>

        <TextView
            android:id="@+id/switch_content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/dimen_12"
            android:textColor="#999999"/>
    </LinearLayout>
</LinearLayout>