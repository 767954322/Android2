<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/addinfo_toobar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingRight="15dp">


        <include layout="@layout/include_back_btn" />

        <TextView
            android:id="@+id/tv_im_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关注"
            android:textColor="#000"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="10dp"
                android:background="@drawable/follow_bg_et"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/head_search_icon2x"
                    android:layout_marginLeft="@dimen/dimen_15"/>
                <EditText
                    android:id="@+id/et_follow_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="搜索昵称"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dimen_5.5"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                     />
                <ImageView
                    android:id="@+id/img_follow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/delete_name"
                    android:layout_marginRight="@dimen/dimen_22"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_fans"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_marginLeft="@dimen/dimen_15.5"
                    android:src="@drawable/friend_fans2x"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_11.5"
                    android:gravity="center_vertical"
                    android:text="粉丝"
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_14"
                    />
                <TextView
                    android:id="@+id/tv_follow_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="#999999"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_15"/>
                <ImageView
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_10"
                    android:src="@drawable/more"
                    android:layout_marginRight="@dimen/dimen_15"/>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/listview"
                android:background="@color/white"
                android:divider="@null"/>
            <TextView
                android:id="@+id/tv_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:text="暂无数据"
                android:textColor="#333"
                android:textSize="@dimen/dimen_14"
                android:gravity="center"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
