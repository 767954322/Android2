<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <!-- 头部 -->

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44">

        <ImageView
            android:id="@+id/iv_titlebar_back"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="@dimen/dimen_43"
            android:padding="@dimen/dimen_15"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black"
            />

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxEms="10"
            android:text="视频"
            android:textColor="@color/color_toolbar_text"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_titlebar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_10"
            android:text="录制"
            android:textColor="@color/color_toolbar_text"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/text_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:enabled="true"
            android:padding="@dimen/dimen_10"
            android:text="发布"
            android:visibility="gone" />

        <View
            style="@style/toolbarline"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="本地没有视频数据"
        android:textSize="20dp"
        android:visibility="gone" />
</LinearLayout>