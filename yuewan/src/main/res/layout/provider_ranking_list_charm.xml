<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/color_main_bg">


    <TextView
        android:id="@+id/tv_item_rangkling_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="#FF999999"
        android:textSize="12dp"
        tools:text="4" />


    <ImageView
        android:id="@+id/iv_item_rangkling_list_avart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/anonymous_icon"/>

    <TextView
        android:id="@+id/tv_item_rangkling_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/tv_item_rangkling_list_charm"
        android:layout_toRightOf="@+id/iv_item_rangkling_list_avart"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="#FF333333"
        android:textSize="15dp"
        tools:text="我的Goddessfdasfsadfsadfs" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignLeft="@+id/tv_item_rangkling_list_name"
        android:layout_below="@+id/tv_item_rangkling_list_name"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_rangkling_list_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_hot_boy_age"
            android:drawableLeft="@drawable/ic_boy_small"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#FFF"
            android:textSize="9dp"
            android:visibility="gone"
            tools:text="22" />

        <TextView
            android:id="@+id/tv_item_rangkling_list_viplevel"
            style="@style/tv_vip" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_rangkling_list_charm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_margin"
        android:textColor="#FF999999"
        android:textSize="12dp"
        tools:text="魅力值 166700" />

    <View
        style="@style/toolbarline"
        android:layout_marginLeft="20dp" />


</RelativeLayout>


