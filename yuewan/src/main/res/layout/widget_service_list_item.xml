<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:id="@+id/rl_widget_main_hot_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_widget_main_hot_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_widget_main_hot_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_17"
            android:layout_alignLeft="@+id/iv_widget_main_hot_item"
            android:layout_alignTop="@+id/iv_widget_main_hot_item"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/shape_hot_tag"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_6"
            android:paddingRight="@dimen/dimen_6"
            android:textColor="#FFAA6308"
            android:textSize="@dimen/dimen_9"
            android:translationX="-3dp"
            tools:text="NEW" />

        <ImageView
            android:id="@+id/widget_service_list_online"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false" />
        <!--android:background="@drawable/bg_gradient"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dimen_100"
            android:layout_alignLeft="@+id/iv_widget_main_hot_item">

            <TextView
                android:id="@+id/tv_widget_main_hot_item_age"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_13"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_3"
                android:background="@drawable/shape_hot_boy_age"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="#FFF"
                android:textSize="@dimen/dimen_9"
                tools:text="22" />

            <TextView
                android:id="@+id/tv_widget_main_hot_item_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_13"
                android:layout_alignBottom="@+id/tv_widget_main_hot_item_age"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_toRightOf="@+id/tv_widget_main_hot_item_age"
                android:gravity="center"
                android:text="上饶市"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>


    </RelativeLayout
>


    <LinearLayout
        android:id="@+id/ll_btm_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_widget_main_hot_item"
        android:background="@drawable/shape_service_list_item_bg"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_widget_main_hot_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="9"
                android:singleLine="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_14"
                tools:text="温暖的路人♚柠檬" />


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_widget_main_hot_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_teacher_level2"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_1"
                android:textColor="#999"
                android:textSize="@dimen/dimen_10"
                tools:text="钻石" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/widget_service_list_order_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_22"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_widget_main_hot_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#FF4949"
                android:textSize="@dimen/sp_12"
                tools:text="35元/小时" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_widget_main_hot_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="9"
                android:singleLine="true"
                android:textColor="#999"
                android:textSize="@dimen/sp_11"
                tools:text="接单xx次" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_service_list_time_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_13"
            >

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                tools:text="2小时前"
                android:textColor="#999"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/iv_widget_detial_festival"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_13"
                android:layout_marginRight="@dimen/dimen_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_service_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_13"
                android:background="@drawable/shape_hot_sile"
                android:drawablePadding="@dimen/dimen_2"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="真人认证"
                android:textColor="#c88505"
                android:textSize="@dimen/sp_9"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_service_list_voice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_13"
            android:paddingTop="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="bottom">
            <TextView
                android:id="@+id/widget_service_list_voice_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_FF4949" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF4949"
                android:layout_gravity="bottom"
                android:text="/分钟"/>

        </LinearLayout>


    </LinearLayout>

</merge>