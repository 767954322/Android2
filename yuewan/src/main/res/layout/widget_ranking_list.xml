<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/manlist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:textColor="#FF333333"
        android:textSize="16dp"
        tools:drawableLeft="@drawable/ic_teacher_devote"
        tools:text="守护榜" />


    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fl_devoterank_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_main_devoterank_1"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_devoterank_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_devoterank_2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_main_devoterank_2"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_devoterank_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_devoterank_3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="2.5dp"
        android:background="@drawable/ic_main_devoterank_3"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_devoterank_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_min_margin"
        android:src="@drawable/arrow_right" />

</merge>