<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_widget_main_hot_item"
        android:layout_width="0dp"
        android:layout_height="0dp">


        <ImageView
            android:id="@+id/iv_widget_main_hot_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/default2"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_widget_main_hot_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/iv_widget_main_hot_item"
            android:layout_alignTop="@+id/iv_widget_main_hot_item"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_hot_tag"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#FFAA6308"
            android:textSize="9dp"
            android:translationX="-3dp"
            tools:text="NEW" />

        <TextView
            android:id="@+id/tv_widget_main_hot_item_age"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignLeft="@+id/iv_widget_main_hot_item"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_hot_boy_age"
            android:drawableLeft="@drawable/ic_boy_small"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#FFF"
            android:textSize="9dp"
            tools:text="22" />


        <TextView
            android:id="@+id/tv_widget_main_hot_item_address"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignBottom="@+id/tv_widget_main_hot_item_age"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_widget_main_hot_item_age"
            android:gravity="center"


            android:text="上饶市"
            android:textColor="#FFFFFFFF"
            android:textSize="10dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_widget_main_hot_item_btmctn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_widget_main_hot_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="9"
                android:singleLine="true"
                android:textColor="#FF333333"
                android:textSize="14dp"
                tools:text="官方派单厅：欢迎回家dfasdfsadf" />

            <ImageView
                android:id="@+id/iv_widget_detial_festival"
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/tv_widget_main_hot_item_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#FF4949"
                android:textSize="12dp"
                tools:text="35元/小时" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_widget_main_hot_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="9"
                android:singleLine="true"
                android:textColor="#999"
                android:textSize="12dp"
                tools:text="官方派单厅：欢迎回家dfasdfsadf" />


            <TextView
                android:id="@+id/tv_service_tag"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_alignTop="@+id/tv_service_age"
                android:layout_below="@+id/tv_service_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_service_age"
                android:background="@drawable/shape_hot_sile"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="真人认证"
                android:textColor="#c88505"
                android:textSize="9dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</merge>