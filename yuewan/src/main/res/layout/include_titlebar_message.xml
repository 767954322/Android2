<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/color_toolbar_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--android:background="@drawable/shape_text_message"-->
        <TextView
            android:id="@+id/tv_titlebar_title_attention"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/iv_titlebar_title_person"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/dimen_14"
            android:gravity="center"
            android:padding="3dp"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />

        <include layout="@layout/include_back_btn" />

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxEms="10"
            android:text=""
            android:textColor="@color/color_toolbar_text"
            android:textSize="@dimen/toolbar_textsize" />


        <ImageView
            android:id="@+id/iv_titlebar_title_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/app_margin"
            android:src="@drawable/ic_message_person"
            android:visibility="gone" />
    </RelativeLayout>
    <!--<View--><!--style="@style/toolbarline"--><!--android:layout_alignParentBottom="true" />-->

</RelativeLayout>