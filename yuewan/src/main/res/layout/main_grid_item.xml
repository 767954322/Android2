<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_10">

    <ImageView
        android:id="@+id/img_grid_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_11"
        android:paddingRight="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_7">
        <TextView
            android:id="@+id/tv_grid_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:maxWidth="@dimen/dimen_112"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/dimen_14"/>
        <TextView
            android:id="@+id/tv_grid_grading"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_14"
            android:gravity="center"
            android:text="钻石"
            android:textSize="@dimen/dimen_10"
            android:textColor="@color/white"
            android:background="@drawable/grid_texts"
            android:paddingLeft="@dimen/dimen_2"
            android:paddingRight="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_grid_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FF4949"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimen_12"/>
        <TextView
            android:id="@+id/tv_grid_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimen_10"/>
    </LinearLayout>
</LinearLayout>
