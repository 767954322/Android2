<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/popup_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/popup_close2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/pop_back"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/popup_icons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/robot_message_link_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ordercancel_icon_popup" />

                <TextView
                    android:id="@+id/receiving_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/popup_icons"
                    android:gravity="center"
                    android:text="拒绝订单需联系用户"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/receiving_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiving_tv"
                    android:gravity="center"
                    android:text="由用户操作取消"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/receiving_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiving_tv2"
                    android:layout_marginBottom="@dimen/iterval_30"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/iterval_11"
                    android:text="无故不接订单,将会受到罚款"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <Button
                android:id="@+id/details_bt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/lins"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:background="@drawable/pop_btn"
                android:text="知道了" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>