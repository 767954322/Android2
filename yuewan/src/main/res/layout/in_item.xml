<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/in_item_icon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/lol" />

        <TextView
            android:id="@+id/in_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/in_item_icon"
            android:text=""
            android:textSize="@dimen/dimen_14"
            android:textColor="@color/color_333333"
            android:minWidth="@dimen/dimen_58"/>

        <TextView
            android:id="@+id/in_item_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/in_item_name"
            android:text="未通过"
            android:textSize="@dimen/dimen_10"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/in_item_no"
            android:paddingLeft="@dimen/dimen_7"
            android:paddingRight="@dimen/dimen_7"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/in_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="未审核"
            android:textColor="#FFC602"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="40dp"
        android:background="#F4F4F4"></View>
</LinearLayout>