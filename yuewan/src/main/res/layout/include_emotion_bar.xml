<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_emotion_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical"
    >


    <View style="@style/toolbarline" />

    <EditText
        android:id="@+id/bar_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_toLeftOf="@+id/bar_btn_send"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入消息..."
        android:lineSpacingExtra="2.5dp"
        android:maxLines="3"
        android:minHeight="43dp"
        android:paddingRight="15dp"
        android:paddingTop="4dp"
        android:textColor="#333"
        android:textColorHint="#FF999999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/bar_btn_send"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/shape_bg_button_reply"
        android:elevation="0dp"
        android:gravity="center"
        android:text="@string/btn_send"
        android:textColor="#FF333333"
        android:textSize="11dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_action_container"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/bar_edit_text"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_audio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_audio_nomal" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_pic_normal" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_camera" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_gift_normal" />

        <ImageView
            android:id="@+id/iv_emojy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_message_emojy_normal" />
    </LinearLayout>


</RelativeLayout>