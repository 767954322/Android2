<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical">

    <include layout="@layout/include_back_btn" />

    <TextView
        android:id="@+id/title_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_titlebar_back"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="10dp"
        android:text="手机注册"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_27" />

    <EditText
        android:id="@+id/et_register_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:textColor="#666"
        android:textColorHint="#FF999999"
        android:textSize="@dimen/sp_16" />

    <View
        style="@style/toolbarlineDark"
        android:layout_marginRight="@dimen/dimen_27" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="12dp"
        >

        <EditText
            android:id="@+id/et_register_ma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:maxEms="11"
            android:singleLine="true"
            android:textColor="#666"
            android:textColorHint="#FF999999"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_register_get"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_34"
            android:layout_alignParentRight="true"
            android:background="@drawable/register_bg_btn"
            android:text="获取验证码"
            android:textColor="@color/color_FFFFFF"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <View
        style="@style/toolbarlineDark"
        android:layout_marginRight="@dimen/dimen_27" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/et_register_pas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码(6-18个字符)"
            android:maxLength="18"
            android:password="true"
            android:singleLine="true"
            android:textColor="#666"
            android:textColorHint="#FF999999"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_register_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_login_pwd_unlook" />
    </RelativeLayout>


    <View
        style="@style/toolbarlineDark"
        android:layout_marginRight="@dimen/dimen_27" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/dimen_320"
        android:layout_height="@dimen/dimen_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_74.5"
        android:background="@drawable/register_bg_imm"
        android:text="立即注册"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>
