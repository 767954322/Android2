<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_widget_main_game_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_widget_main_game_item_rank_smog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main_nav_rank"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_widget_main_game_item_icon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_widget_main_game_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="英雄联盟"
            android:textColor="#FFFFFFFF"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_widget_main_game_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="11dp"
            tools:text="线上lol" />

    </LinearLayout>


</merge>