<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:minWidth="142dp"
    android:layout_height="62dp"
    android:layout_gravity="center_vertical">

    <!--145 65 由于我的。9背景所以这里的大小就要适当的小一点-->

    <ImageView
        android:id="@+id/iv_session_gift"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_session_gift_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_session_gift"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_session_gift"
        android:textColor="#FF333333"
        android:textSize="13dp"
        tools:text="1314个香吻" />


    <TextView
        android:id="@+id/tv_session_gift_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_session_gift_title"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@+id/tv_session_gift_title"
        android:textColor="#FF999999"
        android:textSize="10dp"
        android:layout_marginRight="12dp"
        tools:text="贡献值：+1314" />


</RelativeLayout>