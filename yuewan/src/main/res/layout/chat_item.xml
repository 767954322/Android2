<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relayout_"
        android:background="@drawable/chat_tout"
        android:layout_margin="@dimen/dimen_20"
        android:layout_width="@dimen/dimen_85"

        android:layout_height="@dimen/dimen_25">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_round"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24" />
        

        <TextView
            android:id="@+id/text_name"
            android:layout_toRightOf="@+id/image_round"
            android:layout_marginLeft="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:text="不離不棄"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130">
        <ImageView
            android:id="@+id/image_dt"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_130" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_below="@+id/layout"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dimen_40">


        <TextView
            android:layout_marginLeft="@dimen/dimen_20"
            android:text="派單"
            android:id="@+id/text_pd"
            android:textColor="#FF4949"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/chat_texr"
            android:layout_width="@dimen/dimen_35"
            android:layout_height="@dimen/dimen_15" />

        <TextView
            android:id="@+id/text_gf"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="官方派单厅：欢迎回家"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="right"
            android:text="38人在线"
            android:id="@+id/text_zx"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>