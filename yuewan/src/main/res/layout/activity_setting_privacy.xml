<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4">

    <RelativeLayout
        android:id="@+id/seeting_toobar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <include layout="@layout/include_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="隐私设置"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtl_privacy_yes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@color/main_bg_color"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对他人显示距离"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_privacy_yes"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_choose"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtl_privacy_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72"
        android:layout_marginTop="@dimen/dimen_1"
        android:background="@color/main_bg_color"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭距离"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对所有人只显示城市"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_privacy_no"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/pay_choose"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
