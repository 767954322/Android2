                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="身高:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/bjzl_sg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_6"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/color_EFEFEF" />

            <LinearLayout
                android:id="@+id/ed_tg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="体重:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/bjzl_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_6"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/color_EFEFEF" />

            <LinearLayout
                android:id="@+id/zy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="职业:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/bjzl_occ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_6"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/color_EFEFEF" />

            <LinearLayout
                android:id="@+id/ed_ah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="兴趣爱好:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/bjzl_liking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13"
                    android:maxWidth="@dimen/dimen_150"
                    android:ellipsize="end"
                    android:lines="1"/>

                <ImageView
                    android:layout_width="@dimen/dimen_6"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/color_EFEFEF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="魅力部位："
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />

            <GridView
                android:id="@+id/bjzl_grid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180"
                android:layout_marginLeft="@dimen/iterval_7"
                android:layout_marginRight="@dimen/iterval_7"
                android:horizontalSpacing="@dimen/iterval_5"
                android:numColumns="5"
                android:verticalSpacing="@dimen/iterval_5" />

        </LinearLayout>
    </ScrollView>
