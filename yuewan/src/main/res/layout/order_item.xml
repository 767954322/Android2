<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:background="@drawable/order_bg"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dimen_63"
                android:layout_height="@dimen/dimen_63"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_16">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/order_icon"
                    android:layout_width="@dimen/dimen_63"
                    android:layout_height="@dimen/dimen_63"
                    android:layout_centerInParent="true"
                    android:src="@drawable/empty_pic"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/orderlist_teacher_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/orderlist_teacher_icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_9"
                android:layout_marginTop="@dimen/dimen_16.5"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务名称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/order_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="用户："
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="2017-12-30 13:00~15:00 (2小时)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_19"
                android:text="已取消"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:id="@+id/order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_16.5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_58"
            android:layout_marginLeft="@dimen/dimen_87"
            android:text="预收入：54元"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"/>


        <LinearLayout
            android:id="@+id/percentRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_87"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen_20">

            <Button
                android:id="@+id/order_state3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/order_up"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                android:text=""
                android:textColor="@color/color_FFC602"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

            <Button
                android:id="@+id/order_state2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/order_up"
                android:text="再来一单"
                android:textColor="@color/color_FFC602"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_state1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@null"
                android:text="已完成"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/percentRelativeLayouts"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_87"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen_20">

            <Button
                android:id="@+id/order_state3s"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/order_up"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                android:text="去支付(还剩14分54秒)"
                android:textColor="@color/color_FFC602"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <Button
                android:id="@+id/order_state2s"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_29"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/order_up"
                android:text="再来一单"
                android:textColor="@color/color_FFC602"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F4F4F4"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_15"/>
    </RelativeLayout>

</RelativeLayout>