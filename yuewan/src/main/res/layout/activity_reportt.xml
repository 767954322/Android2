<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_list_bg"
    android:orientation="vertical">


    <include layout="@layout/include_titlebar_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_report_top"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/color_list_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/app_margin"
                    android:text="举报 小可爱 的"
                    android:textColor="#FF999999"
                    android:textSize="12dp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relative_tiao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_report_1"
                    style="@style/report_rb"
                    android:text="政治"

                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/image_choss1"
                    android:background="@drawable/ic_normal_choose"
                    android:layout_width="30px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    />

                <View
                    android:layout_alignParentBottom="true"
                    style="@style/toolbarline"
                    android:layout_marginLeft="@dimen/app_margin" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_tiao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_report_2"
                    style="@style/report_rb"
                    android:text="侵权" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:id="@+id/image_choss2"

                    android:background="@drawable/ic_normal_choose"
                    android:layout_width="30px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    />
                <View
                    android:layout_alignParentBottom="true"
                    style="@style/toolbarline"
                    android:layout_marginLeft="@dimen/app_margin" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_tiao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_report_3"
                    style="@style/report_rb"
                    android:text="色情" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:id="@+id/image_choss3"
                    android:background="@drawable/ic_normal_choose"
                    android:layout_width="30px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    />
                <View
                    android:layout_alignParentBottom="true"

                    style="@style/toolbarline"
                    android:layout_marginLeft="@dimen/app_margin" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relative_tiao4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_report_4"
                    style="@style/report_rb"
                    android:text="广告" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:id="@+id/image_choss4"
                    android:background="@drawable/ic_normal_choose"
                    android:layout_width="30px"
                    android:layout_height="20px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    />
                <View
                    android:layout_alignParentBottom="true"
                    style="@style/toolbarline"
                    android:layout_marginLeft="@dimen/app_margin" />

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/rl_report_other_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FFF"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:gravity="center_vertical"
                    android:text="其他原因"
                    android:textColor="#666"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/et_report_other2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/iv_report_other"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="请说明您的原因..."
                    android:maxLines="3"
                    android:visibility="visible"
                    android:textColor="#666"
                    android:textColorHint="#FF999999"
                    android:textSize="13dp"
                    />
                <EditText
                    android:id="@+id/et_report_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/iv_report_other"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="请说明您的原因..."
                    android:maxLines="3"
                    android:visibility="gone"
                    android:textColor="#666"
                    android:textColorHint="#FF999999"
                    android:textSize="13dp"
                    />
                <ImageView
                    android:id="@+id/iv_report_other"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/app_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_normal_choose"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/color_list_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/app_margin"
                android:text="补充图片证据"
                android:textColor="#FF999999"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_main_bg"
                android:padding="@dimen/app_margin">

                <ImageView
                    android:id="@+id/iv_report_pic_1"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_report_photo"
                    />

                <ImageView
                    android:id="@+id/iv_report_pic_2"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/iv_report_pic_3"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/button_resign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#FFFFC602"
        android:gravity="center"
        android:text="提交"
        android:textColor="#FF333333"
        android:textSize="13dp" />


</LinearLayout>