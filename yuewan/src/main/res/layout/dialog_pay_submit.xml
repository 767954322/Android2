<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_pay_bg">

        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="152dp"
            android:layout_height="120dp"
            android:src="@drawable/img_payment_success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_18"
            />
        <ImageView
            android:id="@+id/img_pays"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_pay_close"
            android:layout_marginRight="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_9"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_pay"
            android:layout_marginTop="10dp"
            android:text="支付成功"
            android:textColor="#333333"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below ="@id/tv_pay_title"
            android:text="导师接单中请耐心等待"
            android:textColor="#999999"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/dimen_7.5"
            android:paddingBottom="@dimen/dimen_40"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below ="@id/rl_pay"
        android:weightSum="2"
        android:layout_marginTop="-20dp"
        >

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_leave_cancel"
            android:gravity="center"
            android:text="知道了"
            android:textColor="#333"
            android:textSize="13dp" />


    </LinearLayout>

</RelativeLayout>