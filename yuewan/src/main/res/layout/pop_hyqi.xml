<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36000000"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/lly_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/popup_close2"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/popup_close2"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/dimen_10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pop_back"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:weightSum="2"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/popup_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/popup_icon"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/pop_kq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="VIP1开启"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="#333333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="- 解锁说明 -"
                    android:textSize="@dimen/dimen_9"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/pop_js"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="可以获得贵族勋章标识"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="#666666"/>
            </LinearLayout>

            <TextView
                android:id="@+id/pop_know"
                android:layout_width="@dimen/dimen_112"
                android:layout_height="@dimen/dimen_26"
                android:layout_below="@id/lin"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-13dp"
                android:textSize="@dimen/dimen_12"
                android:background="@drawable/pop_btn"
                android:gravity="center"
                android:text="知道了"
                android:textColor="#333333"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>