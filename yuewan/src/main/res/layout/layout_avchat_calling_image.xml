<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.tuwan.yuewan.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/avchat_calling_head"
        android:layout_width="@dimen/dimen_115"
        android:layout_height="@dimen/dimen_115"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/avchat_calling_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text=""/>

    <TextView
        android:id="@+id/avchat_calling_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_13"
        android:layout_gravity="center_horizontal"
        android:text=""/>
</LinearLayout>
