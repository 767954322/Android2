<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context="com.tuwan.yuewan.ui.activity.ApplicationInActivity">

    <RelativeLayout
        android:id="@+id/application_toobar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingRight="15dp">
        <include layout="@layout/include_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请服务"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/in_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="申请帮助" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/in_title_ruzhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:background="#95CFFF"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="为了维护您和大家的权益，请您严格遵守《导师守则》！"
                android:textColor="#ffffff"
                android:textSize="@dimen/dimen_13" />
            <TextView
                android:id="@+id/in_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="线上游戏"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_13" />

            <ListView
                android:id="@+id/in_recycler1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/main_bg_color"
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbars="none"></ListView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="线上娱乐"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_13" />

            <ListView
                android:id="@+id/in_recycler2"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_weight="1"
                android:background="@color/main_bg_color"
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbars="none"></ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="线下游戏"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_13" />

            <ListView
                android:id="@+id/in_recycler3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/main_bg_color"
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbars="none"></ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="注：个人最多申请开通七项服务"
                android:paddingLeft="@dimen/dimen_15"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
