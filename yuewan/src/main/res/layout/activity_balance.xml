<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:id="@+id/me_yue_title"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ic_arrow_back_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/ic_arrow_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户充值"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/zh_jilu"
            android:layout_width="27dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="记录"
            android:textColor="#FF666666"
            android:layout_marginRight="@dimen/dimen_10"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/another"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="¥ 0.00"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/sp_30"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="账户余额"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/wushi"
                        android:layout_width="@dimen/dimen_105"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_chongzhi_background1"
                        android:gravity="center"
                        android:text="50元" />

                    <TextView
                        android:id="@+id/yibai"
                        android:layout_width="@dimen/dimen_105"
                        android:layout_height="@dimen/dimen_40"
                        android:background="@drawable/selector_chongzhi_background"
                        android:gravity="center"
                        android:text="100元" />

                    <TextView
                        android:id="@+id/wubai"
                        android:layout_width="@dimen/dimen_105"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="0.04"
                        android:background="@drawable/selector_chongzhi_background"
                        android:gravity="center"
                        android:text="500元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yiqian"
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_chongzhi_background"
                        android:gravity="center"
                        android:text="1000元" />

                    <TextView
                        android:id="@+id/sanqian"
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:background="@drawable/selector_chongzhi_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="3000元" />

                    <TextView
                        android:id="@+id/liuliuliuliu"
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_chongzhi_background"
                        android:gravity="center"
                        android:text="6666元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:focusableInTouchMode="true">
                    <LinearLayout
                        android:id="@+id/lly_custom_chongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/selector_chongzhi_background"
                        android:orientation="horizontal"
                        android:visibility="invisible">
                        <EditText
                            android:id="@+id/custom_chongzhi"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_40"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:hint="自定义充值金额               "
                            android:inputType="number"
                            android:paddingLeft="20dp"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_40"
                            android:text="元"
                            android:textSize="14sp"
                            android:layout_marginRight="@dimen/dimen_20"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="支付方式"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingLeft="@dimen/dimen_15">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dimen_15"
                    android:paddingTop="@dimen/dimen_15">

                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/pay_wechat2x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:text="微信"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/wechat_choose"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:layout_weight="0"
                        android:src="@drawable/pay_choose2x" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dimen_15"
                    android:paddingTop="@dimen/dimen_15">

                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/pay_alipay2x" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="支付宝"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/alipay_choose"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/pay_normal2x" />
                </LinearLayout>
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F4F4F4"
                android:layout_marginBottom="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="充值说明："
                    android:textColor="#FF999999"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="1.充值金额暂不支持提现功能"
                    android:textColor="#FF999999"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2.充值不可少于10元"
                    android:textColor="#FF999999"
                    android:textSize="11sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/need_pay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFC602"
        android:gravity="center"
        android:text="需支付50元" />
</LinearLayout>