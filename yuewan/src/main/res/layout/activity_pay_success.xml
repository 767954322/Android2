<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_list_bg"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_normal" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_pay_success_top"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dimen_198.5"
                    android:layout_height="@dimen/dimen_109.5"
                    android:layout_marginTop="@dimen/dimen_71.5"
                    android:src="@drawable/ic_pay_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_13"
                    android:text="支付成功！"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_paysuccess_paymoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    tools:text="42.00元"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_35" />

                <TextView
                    android:id="@+id/tv_paysuccess_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="原价：¥0"
                    android:textColor="#FF999999"
                    android:textSize="14dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_paysuccess_slie"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_hot_sile"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        tools:text="1折"
                        android:textColor="#FFAA6308"
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tv_paysuccess_sliemoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.5dp"
                        tools:text="为您节省10元"
                        android:textColor="#FF333333"
                        android:textSize="13dp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_262.5"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ic_pay_sucess_bash" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pay_success_btm"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_paysuccess_contact"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="17.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_leave_leave"
                    android:gravity="center"
                    android:text="联系TA"
                    android:textColor="#FF666666"
                    android:textSize="14dp" />

                <android.support.v4.widget.Space
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_paysuccess_check_order"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="17.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_leave_cancel"
                    android:gravity="center"
                    android:text="查看订单"
                    android:textColor="#333"
                    android:textSize="14dp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>