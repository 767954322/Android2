    <style name="empty" parent="AppBaseTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="clickEffect">
        <item name="android:foreground">@drawable/selector_click_effect</item>
    </style>

    <style name="MTextAppearance">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MTextAppearance_min">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="IvTeacherInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">@dimen/app_margin</item>
    </style>

    <style name="TvTeacherInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TvTeacherInfoData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/app_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="DashView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@drawable/shape_teacher_dash</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="ShareIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="toolbarline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_list_bg</item>
    </style>

    <style name="toolbarlineDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_0.5</item>
        <item name="android:background">@color/color_EFEFEF</item>
        <item name="android:layout_marginLeft">@dimen/dimen_27</item>
    </style>

    <style name="makeorderText">
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">37.5dp</item>
    </style>

    <style name="pay_rb" parent="@style/TranslucentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/makeorder_item_heigh</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/ic_paytype_wechat</item>
        <item name="android:drawableRight">@drawable/selector_paytype_right</item>
        <item name="android:layout_marginRight">@dimen/app_margin</item>
        <item name="android:drawablePadding">@dimen/dimen_10</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@color/color_FFFFFF</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_style_white_bg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="tv_age_gender">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/app_icon_heigh</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="tv_vip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/app_icon_heigh</item>
        <item name="android:background">@drawable/bg_shape_vip_high</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="tv_pop_gift_rihgt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="tv_pop_gift_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="report_rb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">#FFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_margin</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <declare-styleable name="CircleHead">
        <attr name="circleBorderHeadWidth" format="dimension" />
        <attr name="ringHeadColor" format="color" />
        <attr name="backgroundHeadColor" format="color" />
    </declare-styleable>

    <style name="fiveRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    //状态栏

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="BaseAppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>    <!-- 状态栏 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- toolbar -->
        <item name="colorAccent">@color/colorAccent</item>  <!-- 重点 -->
    </style>

    <style name="AppTheme2" parent="BaseAppTheme" />


    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2.5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seekbar</item>
        <item name="android:minHeight">2.5dip</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">1.0dip</item>

    </style>
</resources>
